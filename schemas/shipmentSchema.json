{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/order.schema.json",
    "title": "Shipment",
    "description": "Shipment for an ACME product.",
    "type": "object",
    "properties": {
      "productId": {
        "type": "integer",
        "inclusiveMinimum": 1000
    },
      "name": {"type": "string"},
      "addr": {"type": "string"},
      "zip": {
        "type": "string",
        "pattern": "\\d{5}"
    }
    },
    "additionalProperties": false,
    "required": [
      "productId",
      "name",
      "addr",
      "zip"
    ]
  }